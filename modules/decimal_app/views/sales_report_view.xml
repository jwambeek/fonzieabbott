<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_tree" model="ir.ui.view">
        <field name="inherit_id" ref="sale_enterprise.sale_report_view_pivot" />
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
              <xpath expr="//search" position="inside">
                      <filter name="lit_sold" string="Liters per Unit" domain="[('liters_sold','!=',False)]"/> 
                        <field name="liters_sold" invisible="1" />
                        <filter string="Liters per Unit" name="groupby_liters_sold" context="{'group_by':'liters_sold'}"/> 
                    </xpath>
        </field>
    </record>
</odoo>
